<div id="header">
    <%= render "shared/merchant_header" %>
</div>

<div>
    <h3> Invoices </h3>
    <% @merchant.invoices.distinct.each do |invoice| %>
        <div id="invoice-<%= invoice.id %>" >
           <%= link_to "Invoice ##{invoice.id}", "/merchants/#{@merchant.id}/invoices/#{invoice.id}" %>
        </div>
    <% end %>
</div>