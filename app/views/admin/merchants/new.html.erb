<div id="header">
    <%= render "shared/admin_header" %>
</div>

<div class='section-title'><h2>Create New Merchant</h2></div>

<% flash.each do |type, msg| %>
    <div class='flash_red'><%= msg %></div>
<% end %>

<%= form_with url: admin_merchants_path, method: :post, local: true do |f| %>
    <%= f.label :name, 'New Merchant Name' %>
    <%= f.text_field :name %>

    <%= f.submit 'Create New Merchant' %>
<% end %>